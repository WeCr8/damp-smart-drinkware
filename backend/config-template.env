# DAMP Pre-Sale Funnel - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
PORT=3001
CHECKOUT_PORT=3002

# Security
ADMIN_KEY=your-secure-admin-key-here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Database Configuration (for future expansion)
DATABASE_URL=your-database-connection-string

# Email Service (for confirmation emails)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM_ADDRESS=support@dampdrink.com

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# CORS Origins (production)
CORS_ORIGINS=https://dampdrink.com,https://www.dampdrink.com

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CHECKOUT_RATE_LIMIT_MAX=5

# Pre-Sale Campaign Settings
CAMPAIGN_GOAL=500
CAMPAIGN_END_DATE=2025-02-01T00:00:00Z
EARLY_BIRD_PRICE=2999
REGULAR_PRICE=3999

# Feature Flags
ENABLE_SIMULATED_ORDERS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_EMAIL_NOTIFICATIONS=false 