{
  "name": "damp-smart-drinkware",
  "version": "1.0.0",
  "description": "Professional smart drinkware website with BLE technology",
  "main": "index.html",
  "private": true,
  "scripts": {
    "dev": "npx http-server . -p 3000 -c-1",
    "build": "node ../build/build.js",
    "test": "npm run test:components && npm run test:performance",
    "test:components": "jest assets/js/components/",
    "test:performance": "npm run lighthouse:all",
    "lighthouse:all": "npm run lighthouse:desktop && npm run lighthouse:mobile",
    "lighthouse:desktop": "lighthouse http://localhost:3000 --output=html --output=json --output-path=./reports/lighthouse-desktop --chrome-flags='--headless' --preset=desktop",
    "lighthouse:mobile": "lighthouse http://localhost:3000 --output=html --output=json --output-path=./reports/lighthouse-mobile --chrome-flags='--headless'",
    "lighthouse:ci": "lighthouse http://localhost:3000 --output=json --output-path=./reports/lighthouse-ci.json --chrome-flags='--headless --no-sandbox'",
    "lighthouse:budget": "lighthouse http://localhost:3000 --budget-path=lighthouse-budget.json --output=html --output-path=./reports/lighthouse-budget.html",
    "validate:html": "html-validate *.html pages/*.html",
    "validate:css": "stylelint 'assets/css/**/*.css'",
    "validate:js": "eslint 'assets/js/**/*.js'",
    "validate:all": "npm run validate:html && npm run validate:css && npm run validate:js",
    "optimize:images": "imagemin 'assets/images/**/*.{jpg,jpeg,png}' --out-dir=dist/assets/images/",
    "audit": "npm audit && npm run validate:all && npm run lighthouse:all",
    "deploy": "npm run build && npm run audit"
  },
  "dependencies": {},
  "devDependencies": {
    "clean-css": "^5.3.2",
    "eslint": "^8.45.0",
    "html-validate": "^8.2.0",
    "http-server": "^14.1.1",
    "imagemin": "^8.0.1",
    "jest": "^29.6.1",
    "lighthouse": "^10.4.0",
    "stylelint": "^15.10.2",
    "terser": "^5.19.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "keywords": [
    "smart-drinkware",
    "ble-technology",
    "iot",
    "beverage-tracking",
    "professional-website"
  ],
  "author": {
    "name": "WeCr8 Solutions LLC",
    "email": "hello@dampdrink.com",
    "url": "https://dampdrink.com"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "private"
  }
} 